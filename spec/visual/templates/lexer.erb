<!DOCTYPE html>
<html>
  <head>
    <title><%= @lexer.class.name %> | Visual Test</title>

    <style type="text/css">
      <%= @theme.render %>
      <%= @theme.class.styles['Text'].render('body') %>

      pre {
        padding: 15px;
        line-height: 15px;
        font-family: 'Ubuntu Mono', 'Monaco', monospace;
      }

      .legend {
        width: 200px;
        margin-right: 30px;
        float: right;
      }
    </style>
  </head>

  <body>
    <section class="legend">
      <h2>Legend</h2>
      <pre class="highlight"><%
        Rouge::Token.each_token do |token|
          %><span class="<%= token.shortname %>"><%= token.name %></span>
<%      end
      %></pre>
    </section>
    <h2>Highlighted</h2>
    <%= @highlighted %>

    <h2>Raw</h2>
    <pre><%= @sample %></pre>
  </body>
</html>
